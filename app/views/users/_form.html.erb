<div class="container">
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@user.errors.count, "error") %>
              Prohibited this User from being created.
            </h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, :placeholder => 'Please enter your email Address', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => 'Please enter your password', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :placeholder => 'Please enter your name', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.text_field :image_url, :placeholder => 'Please paster user image url', class: 'form-control' %>
      </div>

      <%= f.submit 'Create Account', :class => 'btn btn-primary' %>

  <% end %>
</div>